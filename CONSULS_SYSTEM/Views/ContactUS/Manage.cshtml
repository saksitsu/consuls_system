@model CONSULS_SYSTEM.Models.MT_ContactUS
@using CONSULS_SYSTEM.Resources
@using Microsoft.AspNetCore.Http;

@inject LocService SharedLocalizer
@{
    Layout = "_Layout_admin";
    ViewData["Title"] = "Contact us";
}
<section class="content-header">
    <h1>
        Data
        <small> management</small>
    </h1>
    <!--<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
    </ol>-->
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@SharedLocalizer.GetLocalizedHtmlString("management") - @SharedLocalizer.GetLocalizedHtmlString("Contact us")</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form asp-action="Manage" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ID" type="hidden" />
                <div class="box-body">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <textarea asp-for="Address" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email_1" class="control-label"></label>
                            <input asp-for="Email_1" class="form-control" />
                            <span asp-validation-for="Email_1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email_2" class="control-label"></label>
                            <input asp-for="Email_2" class="form-control" />
                            <span asp-validation-for="Email_2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email_3" class="control-label"></label>
                            <input asp-for="Email_3" class="form-control" />
                            <span asp-validation-for="Email_3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone_Number1" class="control-label"></label>
                            <input asp-for="Phone_Number1" class="form-control" />
                            <span asp-validation-for="Phone_Number1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone_Number2" class="control-label"></label>
                            <input asp-for="Phone_Number2" class="form-control" />
                            <span asp-validation-for="Phone_Number2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone_Number3" class="control-label"></label>
                            <input asp-for="Phone_Number3" class="form-control" />
                            <span asp-validation-for="Phone_Number3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Google_Map_URL" class="control-label"></label>
                            <input asp-for="Google_Map_URL" class="form-control" />
                            <span asp-validation-for="Google_Map_URL" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="Active" class="control-label"></label>
                            <input type="checkbox" @(Model.Active == true ? "checked" : "") name="Active" value=true data-toggle="toggle" data-onstyle="success" />
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>*@

                        <div class="form-group" style="float:right">
                            @*<a asp-action="Manage" class="btn btn-default"><i class="fa fa-mail-reply"></i> Back</a>*@
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
