@model CONSULS_SYSTEM.Models.MT_Country
@using CONSULS_SYSTEM.Resources
@using Microsoft.AspNetCore.Http;

@inject LocService SharedLocalizer
@{
    Layout = "_Layout_admin";
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Data
        <small> management</small>
    </h1>
    <!--<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
    </ol>-->
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@SharedLocalizer.GetLocalizedHtmlString("Edit") - @SharedLocalizer.GetLocalizedHtmlString("Country")</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Country_ID" value="@Model.Country_ID" type="hidden" />
                <input asp-for="Img_Url" type="hidden" />
                <input type="hidden" asp-for="Img_Url" class="form-control">
                <div class="box-body">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Short_Name" class="control-label"></label>
                            <input asp-for="Short_Name" class="form-control" />
                            <span asp-validation-for="Short_Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Img_Url" class="control-label"></label>
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                    <img src="@(Model.Img_Url!=null && !Model.Img_Url.Equals("") ? Url.Content(Model.Img_Url):"/layout_admin/Upload-Image/img/demoUpload.jpg")" alt="" />
                                </div>
                                <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                    <span class="btn btn-file btn-primary">
                                        <span class="fileupload-new">Select image</span>
                                        <span class="fileupload-exists">Change</span>
                                        <input type="file" name="uploadfile" accept="image/*" />
                                    </span>
                                    <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload">Remove</a>
                                </div>
                            </div>
                            <span asp-validation-for="Img_Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descriptions" class="control-label"></label>
                            <textarea id="editor" asp-for="Descriptions" rows="10" cols="80"></textarea>
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Active" class="control-label"></label>
                            <input type="checkbox" @(Model.Active == true ? "checked" : "") name="Active" value=true data-toggle="toggle" data-onstyle="success" />
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="float:right">
                            <a asp-action="Manage" class="btn btn-default"><i class="fa fa-mail-reply"></i> Back</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
