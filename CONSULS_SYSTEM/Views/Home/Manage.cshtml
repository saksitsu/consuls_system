@model CONSULS_SYSTEM.Models.MT_Home
@using CONSULS_SYSTEM.Resources
@using Microsoft.AspNetCore.Http;

@inject LocService SharedLocalizer
@{
    Layout = "_Layout_admin";
    ViewData["Title"] = "Home us";
}
<section class="content-header">
    <h1>
        Data
        <small> management</small>
    </h1>
    <!--<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
    </ol>-->
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@SharedLocalizer.GetLocalizedHtmlString("management") - @SharedLocalizer.GetLocalizedHtmlString("Home")</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form asp-action="Manage" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ID" type="hidden" />
                <input asp-for="Img_Url" type="hidden" />
                <input asp-for="Createby" type="hidden" />
                <input asp-for="CreateDate" type="hidden" />
                <div class="box-body">
                    <div class="col-md-offset-2 col-md-8">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="ID" type="hidden" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Header" class="control-label"></label>
                            <input asp-for="Header" class="form-control" />
                            <span asp-validation-for="Header" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <textarea id="editor" asp-for="Message" rows="10" cols="80"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Credit" class="control-label"></label>
                            <input asp-for="Credit" class="form-control" />
                            <span asp-validation-for="Credit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Footer" class="control-label"></label>
                            <input asp-for="Footer" class="form-control" />
                            <span asp-validation-for="Footer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Active" class="control-label"></label>
                            <input asp-for="Active" class="form-control" />
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Img_Url" class="control-label"></label>
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="@Url.Content(Model.Img_Url)" alt="" /></div>
                                <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                    <span class="btn btn-file btn-primary">
                                        <span class="fileupload-new">Select image</span>
                                        <span class="fileupload-exists">Change</span>
                                        <input type="file" name="uploadfile" accept="image/*" />
                                    </span>
                                    <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload">Remove</a>
                                </div>
                            </div>
                            <span asp-validation-for="Img_Url" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="float:right">
                            @*<a asp-action="Manage" class="btn btn-default"><i class="fa fa-mail-reply"></i> Back</a>*@
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
