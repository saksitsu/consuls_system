@model CONSULS_SYSTEM.Models.Login
@using CONSULS_SYSTEM.Resources
@using Microsoft.AspNetCore.Http;

@inject LocService SharedLocalizer
@using System.IO;
@using Microsoft.Extensions.Configuration
@using System.Net;
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout_login";
}
<div class="login-box-body">
    <p class="login-box-msg">@SharedLocalizer.GetLocalizedHtmlString("Sign in to start your session")</p>
    <form asp-action="Index" asp-controller="Login" method="post" autocomplete="off">
        <div class="form-group has-feedback">
            <input asp-for="Username" class="form-control" placeholder="Username">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-xs-12" style="text-align:center;padding:10px;">
                <span asp-validation-for="Validation" class="text-danger"></span>
            </div>
            <!-- /.col -->
        </div>
        <div class="row">

            <!-- /.col -->
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary btn-block btn-flat">@SharedLocalizer.GetLocalizedHtmlString("Sign in")</button>
            </div>
            <!-- /.col -->
        </div>
    </form>
    @*<div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Sign in using
                Facebook
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign in using
                Google+
            </a>
        </div>*@
    <!-- /.social-auth-links -->
    <br /><a asp-action="forgot_password" asp-controller="Login">@SharedLocalizer.GetLocalizedHtmlString("I forgot my password")</a><br />
    @*<a href="register.html" class="text-center">Register a new membership</a>*@
</div>