                            <span asp-validation-for="Topic" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="col-sm-4  control-label"></label>
                        <div class="col-sm-5">
                            <input asp-for="Title" readonly class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="col-sm-4  control-label"></label>
                        <div class="col-sm-5">
                            <textarea class="form-control" readonly asp-for="Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="col-sm-4  control-label"></label>
                        <div class="col-sm-5">
                            <select asp-items="@ViewBag.ddlLevel" class="form-control select2" disabled></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-4  control-label"></label>
                        <div class="col-sm-5">
                            <input asp-for="Name" readonly class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-sm-4  control-label"></label>
                        <div class="col-sm-5">
                            <input asp-for="Email" readonly class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone_Number" class="col-sm-4  control-label"></label>
                        <div class="col-sm-5">
                            <input asp-for="Phone_Number" readonly class="form-control" />
                            <span asp-validation-for="Phone_Number" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@SharedLocalizer.GetLocalizedHtmlString("Forward")</label>
                        <div class="col-sm-5">
                            <select asp-for="Country_ID" asp-items="@ViewBag.ddlCountry" class="form-control select2">
                                <option value="0">ส่งกลับผู้ที่สอบถาม</option>
                            </select>
                            <span asp-validation-for="Country_ID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@SharedLocalizer.GetLocalizedHtmlString("Other")</label>
                        <div class="col-sm-5">
                            <textarea class="form-control" name="MessageOther" placeholder="Message Other..."></textarea>
                        </div>
                    </div>
