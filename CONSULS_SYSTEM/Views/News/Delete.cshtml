@model CONSULS_SYSTEM.Models.TB_News

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_member.cshtml";
}

<style type="text/css">
    #mainNav {
        display: none;
    }

    section {
        margin-top: 0% !important;
    }
</style>

<section id="News">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-12">
                    <a asp-action="Index" ><h3>Back</h3></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Model.Title</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center" style="text-align:center">

                <img src="@Url.Content(Model.Img_Url)" class="img-responsive img-centered" style="border:3px solid #ffffff; border-radius:10px;" alt="">
            </div>
            <div class="col-lg-12">
                <h4></h4>
                <h3 class="section-subheading text-muted">
                    @Model.Description
                </h3>
            </div>

        </div>
        <div class="row">
            <h2>Delete</h2>
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-success" /> |
                    <a asp-action="/Manage" class="btn btn-danger">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</section>
